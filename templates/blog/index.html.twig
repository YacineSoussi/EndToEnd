{% block body %}
<div class="container">
<h1>Blog index</h1>
 {% for message in app.flashes('success') %}
							<div class="alert alert-success" role="alert">
							{{ message}}
							</div>
							{% endfor %}
{% for blog in blogs %}
    <div class="card" style="width: 18rem; padding: 2%;">
  <img src="https://dummyimage.com/400x200/563d7c/ffffff&text=.card-img-top" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{blog.title}}</h5>
    <p class="card-text">{{blog.content}}</p>
    <a id="show" class="btn btn-success" href="{{ path('app_blog_show', {'id': blog.id}) }}">show</a>
    <a id="edit" class="btn btn-primary" href="{{ path('app_blog_edit', {'id': blog.id}) }}">edit</a>
    <a id="delete" class="btn btn-danger" href="{{ path('app_blog_delete', {'id': blog.id}) }}">delete</a>
  </div>
</div>
{% endfor %}
<a id="add" href="{{ path('app_blog_new') }}" class="btn btn-primary">Create new</a>
</div>
{% endblock %}